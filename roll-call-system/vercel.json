{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/remix",
      "config": {
        "server": "./build/server/index.js"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "roll-call-system/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(login|student-dashboard|teacher-dashboard|admin-dashboard)\\.html",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
